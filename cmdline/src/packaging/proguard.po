}

-keep class br.com.auster.common.**.I18n {
   public ** getInstance(**);
   public ** getString(**);
}

-keep class br.com.auster.common.**.DOMUtils {
   public static int getIntAttribute(org.w3c.dom.Element,java.lang.String,boolean);
}

